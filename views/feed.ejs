<% include ./partials/header.ejs %>
<div class="w-full min-h-screen bg-zinc-700 px-10 py-8">
    <div class="cards flex flex-wrap gap-10">
        <% posts.forEach(function(elem){ %>
            <div class="w-60 text-white flex flex-col">
                        <div class="w-full h-40 bg-zinc-200 rounded-lg overflow-hidden object-over">
                            <img src="/images/uploads/<%= elem.image %>" alt="" srcset="">
                        </div>
                        <h2 class="text-lg font-medium opacity-60"><%= elem.title %> </h2>
                        <h2 class="text-lg font-medium opacity-60"><%= elem.Description %> </h2>
                    </div>
       <% }) %>
        
    </div>

</div>


<% include ./partials/footer.ejs %>